<p id="notice"><%= notice %></p>

<h1>Listing Idioms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @idioms.each do |idiom| %>
      <tr>
        <td><%= idiom.name %></td>
        <td><%= idiom.Country %></td>
        <td><%= link_to 'Show', idiom %></td>
        <td><%= link_to 'Edit', edit_idiom_path(idiom) %></td>
        <td><%= link_to 'Destroy', idiom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

