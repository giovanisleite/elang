  <body>
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
     <div class="container form-control">
        <div class="field row">
          <div class="col-md-2">
            <%= f.label :name %>  
          </div>
          <div class="col-md-10">
            <%= f.text_field :name %>  
          </div>
        </div>
        <div class="field row">
          <div class="col-md-2">
            <%= f.label :email %>
          </div>
          <div class="col-md-10">
            <%= f.email_field :email %>  
          </div>
        </div>
        <div class="field row">
          <div class="col-md-2">
            <%= f.label :password %>
          </div>
          <div class="col-md-10">
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="field row">
          <div class="col-md-2">
            <%= f.label :country_id %>
          </div>
          <div class="col-md-10">
            <%= select_tag 'country_id', options_for_select(Country.all.map{|country| ["#{country.name}", country.id] }) %>
          </div>
        </div>
        <div class="field row">
          <div class="col-md-2">
            <%= f.label :address %><br>
          </div>
          <div class="col-md-10">
            <%= f.text_field :address %>
          </div>
        </div>
        <div class="actions">
          <div class="row">
            <div class="col-md-4 col-md-offset-1">
              <%= button_tag(type: 'submit', class: "btn btn-submit btn-lg") do %>
              Create my account
              <% end %>
            </div>
            <div class="col-md-4 col-md-offset-6">
              <a class="btn btn-default btn-lg" href='javascript:history.back()'>Go Back
            </div>
          </div>
          <!-- <%=f.submit%> -->
        </div>
        
      <% end %>
    </div>
</body>