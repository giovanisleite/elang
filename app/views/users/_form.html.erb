  <body>
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email %>
        </div>
        <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password %>
        </div>
        <div class="field">
          <%= f.label :country_id %><br>
          <%= select_tag 'country_id', options_for_select(Country.all.map{|country| ["#{country.name}", country.id] }) %>
        </div>
        <div class="field">
          <%= f.label :address %><br>
          <%= f.text_field :address %>
        </div>
        <div class="actions">
          <%= button_tag(type: 'submit', class: "btn btn-default btn-lg") do %>
          Create User
          <% end %>
          <!-- <%=f.submit%> -->
        </div>
        
      <% end %>
</body>